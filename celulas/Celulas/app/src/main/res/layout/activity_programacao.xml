<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.ProgramacaoActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/th_programacao"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/programacoesPrimaryDark"
        />

    <TextView
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/programacao_selecionar_programacao"
    android:textColor="#000000"
    android:gravity="center"
    android:textAlignment="center"
    android:textStyle="bold"
    android:background="@color/programacoesPrimary" />
    <TextView
        android:id="@+id/nao_tem"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Não existe programações cadastradas"
        android:textColor="#000000"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="gone"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e6e6e6"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageview_lista_vazia"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@drawable/programacao_erro"/>
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listview_programacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="#979797"
        android:dividerHeight="2dp"
        android:textFilterEnabled="false"
        android:layout_weight="1" />
        </LinearLayout>
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:autoText="false"
        android:background="#FFC107"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ganhar e Cuidar \né a Batida do Nosso Coração"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />
</LinearLayout>
