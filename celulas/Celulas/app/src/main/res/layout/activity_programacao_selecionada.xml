<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.ProgramacaoSelecionadaActivity">

    <TextView
        android:id="@+id/textview_nome_programacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Teste"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:padding="10dp"
        android:stretchColumns="1,3">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:gravity="right"
                android:text="Data:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview_data"
                android:textColor="#000000" />
            <TextView
                android:gravity="right"
                android:text="Telefone:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview_telefone"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:gravity="right"
                android:text="HorÃ¡rio:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview_horario"
                android:textColor="#000000" />
            <TextView
                android:gravity="right"
                android:text="Valor:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview_valor"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:gravity="right"
                android:text="Ver no mapa:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview_mapa"
                android:textColor="#000000" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:id="@+id/imageview_imagem"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:layout_height="100dp"/>
</LinearLayout>
