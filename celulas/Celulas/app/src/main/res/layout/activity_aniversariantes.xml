<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.AniversariantesActivity"
    android:divider="#979797">

    <android.support.v7.widget.Toolbar
        android:id="@+id/th_aniversariante"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Aniversariantes do mês"
        android:background="@color/aniversariantesPrimaryDark"
        app:subtitle="Desejamos parabéns!"
        style="@style/Avisos"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e6e6e6"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageview_lista_vazia"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aniversariante_erro"/>

            <ListView
                android:id="@+id/listview_aniversariantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:cacheColorHint="#00000000"
                android:divider="#979797"
                android:layout_weight="1"
                android:dividerHeight="2dp"
                android:textAlignment="center" />

</LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:autoText="false"
        android:background="@color/aniversariantesPrimaryDark"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ganhar e Cuidar \né a Batida do Nosso Coração"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
