<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.AniversariantesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ANIVERSARIANTES"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_gravity="top"
        android:gravity="center"
        android:padding="10dp"
        android:background="#e0f705"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:phoneNumber="false"
        android:password="false" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parabéns!!!"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listview_aniversariantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#e0f705"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Ganhar e Cuidar \né a Batida do Nosso Coração"
        android:id="@+id/footer"
        android:autoText="false"
        android:layout_gravity="bottom" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
