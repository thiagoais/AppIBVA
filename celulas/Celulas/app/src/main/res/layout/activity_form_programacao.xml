<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidasnoaltarmda.celulas.Activities.FormAvisoActivity"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:text="Nome da Programação:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_nome"/>
    <TextView
        android:text="Data:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:id="@+id/data_programacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:editable="false"
        android:focusable="false" />

    <TextView
        android:text="Horário:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:id="@+id/horario_programacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:editable="false"
        android:focusable="false" />
    <TextView
        android:text="Endereço/Local:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_endereco"/>
    <TextView
        android:text="Telefone:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_telefone"
        android:inputType="phone"/>
    <TextView
        android:text="Valor:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_valor"
        android:inputType="numberDecimal"/>
    <TextView
        android:text="Imagem:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:id="@+id/button_salvar"
        android:text="Salvar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />

</LinearLayout>
