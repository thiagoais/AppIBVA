<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.FormAvisoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/th_add_escala"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Cadastrar Nova Escala"
        android:background="@color/roteirosPrimary"
        style="@style/Avisos"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/data_escala"
                android:editable="false"
                android:focusable="false"
                android:inputType="date"
                style="@style/EditTextPadrao"
                android:hint="Data da célula"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/horario_escala"
                android:editable="false"
                android:focusable="false"
                android:inputType="time"
                style="@style/EditTextPadrao"
                android:hint="Horário da célula"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_local"
                style="@style/EditTextPadrao"
                android:hint="Local da célula"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:text="Dinâmica:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/dinamica"
                style="@style/SpinnerPadrao"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oração:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/oracao"
                style="@style/SpinnerPadrao"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Louvor:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/louvor"
                style="@style/SpinnerPadrao"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palavra:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/palavra"
                style="@style/SpinnerPadrao"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferta:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/oferta"
                style="@style/SpinnerPadrao"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lanche:"
                android:textColor="#000000"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/lanche"
                style="@style/SpinnerPadrao"></Spinner>
            <Button
                android:id="@+id/button_salvar"
                android:text="Salvar"
                style="@style/ButtonBlue" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
