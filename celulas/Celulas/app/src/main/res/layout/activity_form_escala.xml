<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidasnoaltarmda.celulas.Activities.FormAvisoActivity"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:text="Data da Célula:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/data_escala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date" />
    <TextView
        android:text="Horário da Célula:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horario_escala"
        android:inputType="time"
        />
    <TextView
        android:text="Local/Endereço:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_local"/>
    <TextView
        android:text="Dinâmica:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:enabled="false"
        android:editable="false" />

    <Spinner
        android:id="@+id/dinamica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:text="Oração:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/oracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:text="Louvor:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/louvor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:text="Palavra:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/palavra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:text="Oferta:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
       />
    <Spinner
        android:id="@+id/oferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <TextView
        android:text="Lanche:"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/lanche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:id="@+id/button_salvar"
        android:text="Salvar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />

</LinearLayout>
