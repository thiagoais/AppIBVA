<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    tools:context="com.vidasnoaltarmda.celulas.Activities.RoteiroActivity">

      <android.support.v7.widget.Toolbar
        android:id="@+id/th_roteiro"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Escala"
        android:background="@color/roteirosPrimary"
        app:subtitle="Selecione o roteiro"
        style="@style/Avisos"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1b4d07">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e6e6e6"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageview_lista_vazia"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:src="@drawable/roteiro_erro"/>

    <ListView
        android:id="@+id/listview_roteiros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="#979797"
        android:dividerHeight="2dp" />
</LinearLayout>
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:autoText="false"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ganhar e Cuidar \né a Batida do Nosso Coração"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</LinearLayout>
